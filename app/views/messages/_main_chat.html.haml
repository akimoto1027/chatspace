.chat_main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__currnt-group
        = @group.name
      %ul.main-header__left-box__member-list
        Member : 
        %li.main-header__left-box__member-list__member
          - @group.users.each do |user|
            = user.name
    .main-header__edit-btn
      = link_to edit_group_path(@group.id) do
        Edit
  .messages
    = render @messages

  .form
    = form_for [@group, @message], html: {class: "Form"} do |f|
      .Form__input-box
        = f.text_field :content, class: 'Form__input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'Form__input-box__image' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'Form__input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'